{
    "name": "I'm Reading",
    "description": "Store and Restore halfway reading tabs",
    "version": 0.1,
    "manifest_version": 2,
    "browser_action": {
        "default_title": "I'm Reading",
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/get_started16.png",
            "32": "assets/icons/get_started32.png",
            "48": "assets/icons/get_started48.png",
            "128": "assets/icons/get_started128.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "storage",
        "tabs"
    ]
}
